<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/placeholder"/>

        <TextView
            style="@style/TextGroupPrimary"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_name"
            android:layout_marginTop="@dimen/margin_text"
            android:layout_marginLeft="@dimen/margin_text"
            android:layout_marginStart="@dimen/margin_text"/>

        <TextView
            style="@style/TextGroupSecondary"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_marginTop="@dimen/margin_text"
            android:layout_marginRight="@dimen/margin_text"
            android:layout_marginEnd="@dimen/margin_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            style="@style/TextGroupSecondary"
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_description"
            android:layout_marginBottom="@dimen/margin_text"
            android:layout_marginLeft="@dimen/margin_text"
            android:layout_marginStart="@dimen/margin_text"
            android:layout_marginEnd="@dimen/margin_text"
            android:layout_marginRight="@dimen/margin_text"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>